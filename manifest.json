{
  "manifest_version": 3,
  "name": "CaveDuck Tag Searcher",
  "version": "1.0",
  "description": "Adds a search bar to the tags list on caveduck.io.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://caveduck.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://caveduck.io/*"],
  "permissions": []
}
